<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<include file="struts-default.xml"/>
	<!-- declare the package -->
	<package name="com.struts.action" extends="struts-default">
		<!-- 
			all of the codes included in the package are the declarations of action'name and
			the methods which they correspond to
			the result is the .jsp which they return by the name methods return
		-->
		<default-action-ref name="index"></default-action-ref>
	     	<action name="index">
	        <result>Library.jsp</result>
	    </action>
		<action name="searchBook" class="com.struts.action.SearchBook">
			<result>bookInf.jsp</result>
			<result name="NotExist">addBook.jsp</result>
		</action>
		<action name="searchAuthor" class="com.struts.action.SearchAuthor">
			<result>Library.jsp</result>
		</action>
		<action name="change" class="com.struts.action.Change">
			<result>Library.jsp</result>	
		</action>
		<action name="addBook" class="com.struts.action.AddBook">
			<result>Library.jsp</result>
			<result name="FAIL">addAuthor.jsp</result>
			<result name="Error">addBook.jsp</result>
		</action>
		<action name="addAuthor" class="com.struts.action.AddAuthor">
			<result>Library.jsp</result>
			<result name="Error">addBook.jsp</result>
		</action>
		
	</package>
</struts>